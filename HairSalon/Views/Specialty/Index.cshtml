<h1>Hair Salon</h1>


<h2>Specialty List: </h2>

@if (Model.Count != 0)
{
    <ul>
    @foreach (var specialty in Model)
    {
        <li><a href='/specialty/@specialty.GetId()'>@specialty.GetSpecialty()</a></li>
    }
    </ul>
}

<h4><a href="/specialty/new">Add new specialty</a></h4>
<form action="/specialty/deleteall" method="post">
  <button type="submit">Delete all specialty</button>
</form>
