<h1>Current list of clients:</h1>

@if (Model.Count != 0)
{
    <ul>
    @foreach (var client in Model)
    {
        <li><a href='/clients/@client.GetId()'>@client.GetName()</a></li>
    }
    </ul>
}
<p><a href='/clients/new'>Add Client</p>
<p><a href='/'>Back to front page</a></p>
<a href='/clients/deleteAll'>Click here to delete the whole list of clients!</a>
